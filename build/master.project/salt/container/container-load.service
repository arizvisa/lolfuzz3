[Unit]
Description=Container-Loader
Wants=container-build.service
After=container-build.service

[Service]
User=root
Type=oneshot
RemainAfterExit=yes
Environment="CONTAINER_DIR={{ container_path }}"
Environment="IMAGEDIR={{ container_path }}/image"
ExecStart=/bin/sh -c \
    "${CONTAINER_DIR}"/container-load.sh

[Install]
RequiredBy=container-load.path
WantedBy=multi-user.target
